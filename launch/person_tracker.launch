<launch>
  <arg name="camera_ns" default="/realsense_front" />
  <node name="person_reid" pkg="person_tracking" type="person_tracker.py" output="screen">
    <remap from="~image" to="$(arg camera_ns)/color/image_raw/compressed" />
    <remap from="~points" to="$(arg camera_ns)/depth_registered/points" />
    <remap from="~detected_persons" to="$(arg camera_ns)/person_reid/detected_persons"/>
  </node>
  <param name="DEEPSORT/REID_CKPT" type="string" value="$(find person_tracking)/src/weights/model.pth.tar-100" />
  <rosparam file="$(find person_tracking)/configs/deep_sort.yaml" />

</launch>
